{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}Connexion
{% endblock %}
{% block titre %}
    Connexion
{% endblock %}



{% block body %}

    {% for message in app.flashes('success') %}
        <div class="row mt-4">
            <div class="alert alert-success col-md-6 text-center">
                {{ message }}
            </div>
        </div>
    {% endfor %}


    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-mail" name="_username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe" name="_password">
                    <a href="{{ path('registration') }}">Pas encore inscrit? cliquez ici</a>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Se connecter</button>

            </form>

        </div>
    </div>


{% endblock %}
